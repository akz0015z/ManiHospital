source "https://rubygems.org"

# Core Rails framework
gem "rails", "~> 8.1.1"

# CORS support so frontend can talk to backend
gem "rack-cors"

# Database
gem "sqlite3", ">= 2.1"

# Web server (more stable for Windows)
gem "webrick", "~> 1.9"

# Rack compatibility
gem "rack", "~> 2.2"

# Secure password hashing for manual authentication
gem "bcrypt", "~> 3.1.7"

# Time zone data for Windows
gem "tzinfo-data", platforms: %i[ windows jruby ]

# Active Storage and background jobs
gem "solid_cache"
gem "solid_queue"
gem "solid_cable"

# Boot performance
gem "bootsnap", require: false

# Deployment (optional)
gem "kamal", require: false

# Image processing (required by Active Storage)
gem "image_processing", "~> 1.2"

group :development, :test do
  gem "debug", platforms: %i[ mri windows ], require: "debug/prelude"
  gem "bundler-audit", require: false
  gem "brakeman", require: false
  gem "rubocop-rails-omakase", require: false
end
